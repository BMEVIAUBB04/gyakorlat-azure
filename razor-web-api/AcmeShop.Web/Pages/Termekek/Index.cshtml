    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Termek[0].Nev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termek[0].NettoAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termek[0].Raktarkeszlet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termek[0].Leiras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termek[0].Kep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Termek[0].Afa)
