    <tbody>
@foreach (var item in Model.Termek) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NettoAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raktarkeszlet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leiras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Afa.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategoria.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
